{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "fitnesse-static",
      "host": {
        "sourcePath": "/var/app/current/fitnesse"
      }
    }
  ],
	
  "containerDefinitions": [
  {
	"name": "fitnesse-content",
	"image": "zsuffazs/fitnesse-docker-content",
	"essential": true,
	"cpu": 100,
	"memory": 128,
	"mountPoints": {
		"sourceVolume": "fitnesse-static",
		"containerPath": "/fitnesse",
		"readOnly": false
	},
    "portMappings": [
      {
        "hostPort": 21,
        "containerPort": 21
      }
    ]
  },
  
  {
    "name": "fitnesse-app",
    "image": "zsuffazs/fitnesse-docker-server",
    "essential": true,
    "memory": 256,
    "volumesFrom": [
      {
        "sourceContainer": "fitnesse-content"
      }
    ],
    "portMappings": [
      {
        "hostPort": 9123,
        "containerPort": 9123
      }
    ],
    "command": [
      "mvn -f fitnesse-connect-connect/pom.xml clean verify -P wiki"
    ]
  }
]
}