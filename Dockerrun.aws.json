{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nginx-proxy-static",
      "host": {
        "sourcePath": "/var/app/current/proxy/html"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/proxy/conf.d"
      }
    }
  ],
  
  "containerDefinitions": [
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "fitnesse-app"
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-proxy-static",
          "containerPath": "/usr/share/nginx/html",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    },

    {
      "name": "fitnesse-cotent",
      "image": "zsuffazs/fitnesse-docker-content",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "containerPath": "/fitnesse",
          "readOnly": true
        }
      ]
    },
    
    {
      "name": "fitnesse-app",
      "image": "zsuffazs/fitnesse-docker-server",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 9123,
          "containerPort": 9123
        }
      ],
      "volumesFrom": [
        {
          "sourceContainer": "fitnesse-content"
        }
      ]
    }
  ],
  
  "localContainerDefinitions": [
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "fitnesse-app"
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-proxy-static",
          "containerPath": "/usr/share/nginx/html",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    },

    {
      "name": "fitnesse-cotent",
      "image": "zsuffazs/fitnesse-docker-content",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "containerPath": "/fitnesse",
          "readOnly": true
        }
      ]
    },
    
    {
      "name": "fitnesse-app",
      "image": "zsuffazs/fitnesse-docker-server",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 9123,
          "containerPort": 9123
        }
      ],
      "volumesFrom": [
        {
          "sourceContainer": "fitnesse-content"
        }
      ]
    }
  ]
}